<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_view_lugar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/text_view_nombre"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_view_lugar"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/image_view_lugar"
            android:text="Lugar" />

        <TextView
            android:id="@+id/text_view_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_nombre"
            android:layout_alignStart="@+id/text_view_nombre"
            android:layout_alignBottom="@+id/image_view_lugar"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@id/image_view_lugar"
            android:text="Infomacion" />


    </RelativeLayout>

</LinearLayout>